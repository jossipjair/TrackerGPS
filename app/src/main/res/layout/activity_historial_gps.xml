<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Controlador.HistorialGps">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:text="Historial GPS"
        android:textSize="25dp"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:textColor="@color/colorAzul"
        android:id="@+id/lblHistorialGps" />

    <Button
        android:id="@+id/btnSeleccionFecha"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text=".:: SELECCIONE FECHA ::."
        android:textStyle="bold"
        android:layout_below="@id/lblHistorialGps"
        android:background="@color/colorVerde"
        android:textColor="@color/colorBlanco"
        />

    <GridView
        android:id="@+id/gvHistorialGps"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnSeleccionFecha"
        android:layout_marginTop="30dp" />

</RelativeLayout>